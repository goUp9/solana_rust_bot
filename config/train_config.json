{
  "model": {
    "model_name": "Qwen/Qwen3-4B",
    "use_4bit": true,
    "bnb_4bit_compute_dtype": "bfloat16",
    "bnb_4bit_quant_type": "nf4",
    "use_nested_quant": true
  },
  "lora": {
    "r": 32,
    "lora_alpha": 64,
    "target_modules": [
      "q_proj",
      "k_proj",
      "v_proj",
      "o_proj",
      "gate_proj",
      "up_proj",
      "down_proj"
    ],
    "lora_dropout": 0.05,
    "bias": "none",
    "task_type": "CAUSAL_LM"
  },
  "ppo": {
    "batch_size": 8,
    "mini_batch_size": 2,
    "gradient_accumulation_steps": 4,
    "learning_rate": 5e-6,
    "ppo_epochs": 4,
    "init_kl_coef": 0.05,
    "target_kl": 10.0,
    "adap_kl_ctrl": true,
    "cliprange": 0.2,
    "cliprange_value": 0.2,
    "vf_coef": 0.1,
    "num_train_steps": 3000,
    "save_freq": 150,
    "eval_freq": 50,
    "log_freq": 10,
    "max_seq_length": 2048,
    "temperature": 0.7,
    "top_p": 0.9,
    "output_dir": "./checkpoints/game_ppo_lora",
    "resume_from": null,
    "use_wandb": true,
    "wandb_project": "game-rl-training",
    "wandb_run_name": null
  }
}