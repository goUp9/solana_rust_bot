{
  "model": {
    "model_name": "Qwen/Qwen3-4B",
    "use_4bit": true,
    "bnb_4bit_compute_dtype": "bfloat16",
    "bnb_4bit_quant_type": "nf4",
    "use_nested_quant": true
  },
  "lora": {
    "r": 16,
    "lora_alpha": 32,
    "target_modules": [
      "q_proj",
      "k_proj",
      "v_proj",
      "o_proj",
      "gate_proj",
      "up_proj",
      "down_proj"
    ],
    "lora_dropout": 0.05,
    "bias": "none",
    "task_type": "CAUSAL_LM"
  },
  "ppo": {
    "batch_size": 4,
    "mini_batch_size": 4,
    "gradient_accumulation_steps": 1,
    "learning_rate": 1e-5,
    "ppo_epochs": 2,
    "init_kl_coef": 0.01,
    "target_kl": 10.0,
    "adap_kl_ctrl": true,
    "cliprange": 0.2,
    "cliprange_value": 0.3,
    "vf_coef": 0.3,
    "num_train_steps": 1000,
    "save_freq": 50,
    "eval_freq": 20,
    "log_freq": 1,
    "max_seq_length": 512,
    "max_new_tokens": 8,
    "temperature": 0.8,
    "top_p": 0.9,
    "output_dir": "./checkpoints/game_ppo_lora",
    "resume_from": null,
    "use_wandb": true,
    "wandb_project": "game-rl-training",
    "wandb_run_name": null,
    "include_invalid_samples": true,
    "invalid_penalty": -0.5,
    "sft_warmup_steps": 50
  }
}
